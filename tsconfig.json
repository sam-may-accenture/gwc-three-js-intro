{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts", "webpack.config.dev.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
